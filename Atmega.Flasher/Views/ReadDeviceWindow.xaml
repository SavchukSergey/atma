<Window x:Class="Atmega.Flasher.Views.ReadDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reading Device" Height="116" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Loaded="ReadDeviceWindow_OnLoaded">
    <StackPanel Orientation="Vertical" x:Name="operationView" >
        <TextBlock>Progress:</TextBlock>
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Path=Progress, Mode=OneWay}" Height="50"></ProgressBar>
    </StackPanel>
</Window>
