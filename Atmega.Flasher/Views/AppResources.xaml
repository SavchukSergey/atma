<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Atmega.Flasher.Converters"
                    xmlns:views="clr-namespace:Atmega.Flasher.Views">
    <Style TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style TargetType="DataGrid">
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style x:Key="HexBoardButton" TargetType="Button">
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style x:Key="Container" TargetType="Panel">
        <Setter Property="Margin" Value="5" />
    </Style>
    <converters:ProgressStateConverter x:Key="ProgressStateConverter" />
</ResourceDictionary>