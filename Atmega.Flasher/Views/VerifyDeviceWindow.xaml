<views:BaseDeviceOperationWindow x:Class="Atmega.Flasher.Views.VerifyDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Atmega.Flasher.Views"
        Title="Verifying Device" Height="142" Width="300"
        Icon="../Icons/verify.png"  >
    <views:BaseDeviceOperationWindow.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal" ProgressValue="{Binding Path=DeviceOperation.ProgressFraction}" />
    </views:BaseDeviceOperationWindow.TaskbarItemInfo>
    <StackPanel Orientation="Vertical">
        <views:DeviceOperationView />
    </StackPanel>
</views:BaseDeviceOperationWindow>
