<views:BaseDeviceOperationWindow x:Class="Atmega.Flasher.Views.EraseDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Atmega.Flasher.Views" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Atmega.Flasher.Models"
        mc:Ignorable="d"
        Title="Reading Device" Height="142" Width="300"
        Icon="../Icons/erase.png"
        d:DataContext="{d:DesignInstance models:FlasherOperationModel }">
    <views:BaseDeviceOperationWindow.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding Path=DeviceOperation.Status, Mode=OneWay, Converter={StaticResource ProgressStateConverter}}" ProgressValue="{Binding Path=DeviceOperation.ProgressFraction}" />
    </views:BaseDeviceOperationWindow.TaskbarItemInfo>
    <StackPanel Orientation="Vertical" Style="{StaticResource Container}">
        <views:DeviceOperationView DataContext="{Binding Path=DeviceOperation}" />
    </StackPanel>
</views:BaseDeviceOperationWindow>
